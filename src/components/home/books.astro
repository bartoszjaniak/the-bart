<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <div
    class="grid items-stretch w-full sm:grid-cols-4 md:grid-cols-5 gap-7 mt-7"
  >
    {
      books.map((book) => {
        return (
          <Book
            name={book.name}
            image={book.image}
            url={book.url}
          />
        );
      })
    }
  </div>
</section>
